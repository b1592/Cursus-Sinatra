<article class="type-system-geometric">

<h1><%= @post.title %></h1>

<p class="date"><%= @post.created_at.strftime("%d-%m-%Y") %></p>
<p><%= @post.body %>
</p>

<hr>
<p class="author"><%= @post.author %></p>

<% if session[:logged_in] %>
<a href="/posts/<%= @post.id %>/edit">Verander deze post</a> | <a href="/posts/<%= @post.id %>/delete">Verwijder deze post</a>
<% end %>
</article>
